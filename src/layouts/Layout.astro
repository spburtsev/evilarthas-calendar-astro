---
export interface Props {
  title?: string;
}

const title = Astro.props.title ?? 'EvilArthas Calendar';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-gray-300 min-h-screen flex flex-col">
      <header class="bg-gray-700 text-white p-4">
        <h1 class="text-2xl font-bold">{title}</h1>
      </header>
      <main class="grow container mx-auto p-4">
        <slot />
      </main>
      <footer>
        <p class="text-center text-gray-500 text-sm py-4">Made with Astro</p>
      </footer>
    </div>
  </body>
</html>
