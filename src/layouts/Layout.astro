---
export interface Props {
  title?: string;
}

const title = Astro.props.title ?? 'EvilArthas Calendar';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={title} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-gray-300 min-h-screen flex flex-col">
      <header class="flex items-center bg-gray-700 text-white p-4">
        <h1 class="text-2xl font-bold mr-8">EvilArthas Calendar</h1>
        <nav>
          <a href="/" class="mr-4">Home</a>
          <a href="/full-calendar">Full Calendar</a>
        </nav>
      </header>
      <main class="grow container mx-auto">
        <slot />
      </main>
      <footer>
        <p class="text-center text-gray-500 text-sm py-4">Made with Astro</p>
      </footer>
    </div>
  </body>
</html>
